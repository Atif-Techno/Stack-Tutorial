@model IEnumerable<StackTutorial.Models.Content>
@{
    ViewData["Title"] = "Contents";
    Layout = "_LayoutAdmin";
}

<h1>Contents</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Topic</th>
            <th>Category</th>
            <th>Order</th>
            <th>Created</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Topic.Title</td>
                <td>@item.Topic.Category.Name</td>
                <td>@item.Order</td>
                <td>@item.CreatedDate.ToString("MMMM dd, yyyy")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>