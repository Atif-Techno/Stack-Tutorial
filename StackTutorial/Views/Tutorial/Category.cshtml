@model IEnumerable<StackTutorial.Models.TopicModel>
@{
    ViewData["Title"] = ViewBag.Category.Name;
}

<div class="container">
    <div class="category-header text-center mb-5">
        <h1>@ViewBag.Category.Name</h1>
        <p class="lead text-muted">@ViewBag.Category.Description</p>
    </div>

    <div class="row">
        @foreach (var topic in Model)
        {
            <div class="col-md-6 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h2 class="card-title">
                            <a asp-action="Topic" asp-route-id="@topic.TopicID">@topic.Title</a>
                        </h2>
                        <p class="card-text">@topic.Description</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>