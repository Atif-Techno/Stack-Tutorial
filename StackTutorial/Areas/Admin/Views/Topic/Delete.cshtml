@model StackTutorial.Models.TopicModel
@{
    ViewData["Title"] = "Delete Topic";
    Layout = "_LayoutAdmin";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Delete Topic</h1>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>Back to List
        </a>
    </div>

    <div class="alert alert-danger">
        <h4><i class="fas fa-exclamation-triangle me-2"></i>Warning</h4>
        <p class="mb-0">This will permanently delete the topic and all associated content. This action cannot be undone.</p>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <h5 class="card-title">@Model.Title</h5>
            <p class="card-text">@Model.Description</p>
            <dl class="row mt-3">
                <dt class="col-sm-3">Category</dt>
                <dd class="col-sm-9">@Model.Category.Name</dd>

                <dt class="col-sm-3">Slug</dt>
                <dd class="col-sm-9">@Model.Slug</dd>

                <dt class="col-sm-3">Status</dt>
                <dd class="col-sm-9">
                    <span class="badge @(Model.IsActive ? "bg-success" : "bg-secondary")">
                        @(Model.IsActive ? "Active" : "Inactive")
                    </span>
                </dd>

                <dt class="col-sm-3">Created</dt>
                <dd class="col-sm-9">@Model.CreatedDate.ToString("MMMM dd, yyyy")</dd>

                @if (Model.UpdatedDate.HasValue)
                {
                    <dt class="col-sm-3">Last Updated</dt>
                    <dd class="col-sm-9">@Model.UpdatedDate.Value.ToString("MMMM dd, yyyy")</dd>
                }
            </dl>
        </div>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="TopicID" />
        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-danger">
                <i class="fas fa-trash me-2"></i>Confirm Delete
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="fas fa-times me-2"></i>Cancel
            </a>
        </div>
    </form>
</div>